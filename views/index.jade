extends layout

block content
  h1 Welcome to the user list!
  br
  br
  br
  br

  // Wrapper
  #wrapper
    // USER LIST
    h2 User List
    #userList
      table
        thead
          th UserName
          th Email
          th Delete
        tbody
    // /USER LIST

    // USER INFO
    #userInfo
      h2 User Info
      p
        strong Name:
        |  <span id='userInfoName'></span>
        br
        br
        strong Age:
        |  <span id='userInfoAge'></span>
        br
        br
        strong Message:
        |  <span id='userInfoMessage'></span>
        br
        br
        strong Marital Status:
        |  <span id='userInfoMaritalStatus'></span>
        br
        br
        strong Gender:
        |  <span id='userInfoGender'></span>
        br
        br
        strong Location:
        |  <span id='userInfoLocation'></span>
    // /USER INFO
    // ADD USER
    #addUser
      h2 Add User
      fieldset
        input#inputUserName(type='text', placeholder='Username')
        input#inputUserEmail(type='text', placeholder='Email')
        br
        input#inputUserFullname(type='text', placeholder='Full Name')
        input#inputUserAge(type='text', placeholder='Age')
        input#inputUserMessage(type='text', placeholder='Message')
        br
        input#inputUserMaritalStatus(type='text', placeholder='Marital Status')
        input#inputUserLocation(type='text', placeholder='Location')
        input#inputUserGender(type='text', placeholder='Gender')
        br
        button#btnAddUser Add User
    // /ADD USER

  // /WRAPPER

